{
  "name": "api",
  "version": "0.0.1",
  "private": true,
  "main": "api/bin/www",
  "scripts": {
    "start": "node api/dist/bin/www | bunyan -o short --color",
    "postinstall": "tsc -p ./api",
    "dev": "nodemon | bunyan -o short --color",
    "test": "cross-env IS_TEST=Y jest --colors --watch --runInBand | bunyan -l warn"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "./"
    ],
    "exec": "npm start",
    "ext": "ts"
  },
  "dependencies": {
    "@types/bunyan": "^1.8.6",
    "@types/cookie-parser": "^1.4.1",
    "@types/debug": "^4.1.4",
    "@types/express": "^4.17.0",
    "@types/morgan": "^1.7.35",
    "@types/node": "^12.0.10",
    "@types/supertest": "^2.0.7",
    "bunyan": "^1.8.12",
    "cross-env": "^5.2.0",
    "express": "~4.16.1"
  },
  "devDependencies": {
    "@types/jest": "^24.0.15",
    "cookie-parser": "^1.4.4",
    "jest": "^24.8.0",
    "morgan": "^1.9.1",
    "nodemon": "^1.19.1",
    "should": "^13.2.3",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.2"
  }
}
